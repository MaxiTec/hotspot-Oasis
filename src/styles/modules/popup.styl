.promotion
	background-color: #FFFFFF;
	background: linear-gradient(180deg, rgba(252,252,252,0.78) 0%, rgba(0,0,0,0.04) 100%);
	display flex
	flex-direction: column
	+from-width(5)
		flex-direction: row
	&__image
		flex-basis: 55%
	&__info
		flex-basis: 45%
		padding: 1rem
		&__body
			.list-promo
				margin-bottom: 24px
				li
					color: #7373A9
					font-family: Muli
					font-size: 25px
					line-height: 44px
					+from-width(5)
						font-size: 35px
					&:before
						content:''
						display inline-block
						height 7px
						width: 7px
						border-radius: 50%
						background: #7373A9
						vertical-align: middle
						margin-right: 3px
		&__promo
			margin-bottom 20px
			text-align: center
			+from-width(5)
				text-align: left
			span
				color: #727070;
				font-family: Muli;
				font-size: 14px;
				font-weight: bold;
				line-height: 18px
				text-align: center
				+from-width(4)
					font-size: 31px
					line-height: 39px;
				& + span
					color: #7373A9;
					font-family: Muli;
					font-size: 45px;
					font-weight: bold;
					line-height: 75px;
					text-align: left
					display inline-block
					+from-width(4)
						font-size: 60px;
					small
						display block
						line-height: 18px
						text-align: right 
						font-size: 18px
		&__prices
			margin-bottom 20px
			.subtitle
				font-size: 30px
				text-transform: uppercase
				color:#7373A9
				text-align: center
				+from-width(5)
					text-align: left
		.promotion__hotel
			li
				display flex
				align-items: center
				margin-bottom 5px
				img
					margin-right: 5px
		+from-width(5)
			padding: 2rem