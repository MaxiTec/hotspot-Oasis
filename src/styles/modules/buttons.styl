
// btn(color, bg, border, bordersize, shadow)
.btn
	height: 45px
	position: relative
	line-height: 45px
	padding: 0px 10px
	cursor pointer
	font-weight: 500
	font-size: 30px
	text-align: center
	text-transform: uppercase
	font-size: 11px
	display: inline-block
	letter-spacing: 1px
	transition: 0.2s all ease
	font-family $primary-font
	text-transform: uppercase
	color:#fff
	border:0
	&-big
		padding: 0px 25px
	&-fixed
		max-width 250px
		margin: 0 auto
	&-lg
		height 70px
		line-height: 70px
		padding-left:30px
		padding-right:30px
	+from-width(5)
		font-size: 13px
	&-xs
		height 30px
		min-width: 100px
		box-shadow: 0 1px 3px 0 rgba(0,0,0,0.37)
		border-width: 2px!important
		font-size: 16px
		line-height: 24px;
	&.btn-rounded
		border-radius: 35px
		btn(#fff,rgba(255,255,255,0.38),white,false,false)
		&--lg
			min-width: 200px
			border-width: 3px
			line-height: 35px
			font-size: 20px;
			+from-width(5)
				text-align: center
				box-shadow: 0 2px 14px 0 rgba(0,0,0,0.5);
				border-width: 5px
				font-weight: 300
				font-size: 26px;
				line-height: 32px;
	&.btn-default
		btn(#fff, #d1d1d1, #d1d1d1, false,false)
	&.btn-reverse
		btn(#d1d1d1, #ffffff, #d1d1d1, false,false)
		background-color: #d1d1d1!important
		border:2px solid #d1d1d1!important
		color:#fff!important
		&:hover
			background-color: darken(#d1d1d1,30%)!important
			border:2px solid darken(#d1d1d1,30%)!important
	&.btn-transparent
		background-color: transparent!important
		border:2px solid #fff!important
		color:#fff!important
		&:hover
			background-color:rgba(#ffffff,30%)!important
		// btn(#fff, green,yellow, false,false)
	&.btn-block
		display block
		width: 100%
		+mobile(orientation: landscape)
			width:auto
			display inline-block
	// &-goc
	// 	btn(#fff, $cancunColor, false, false, false)
		// box-shadow: 0 7px 10px 0 rgba(0,0,0,0.17);
		&:hover
			background darken($cancunColor,20%)
			color white
	&.lang-box-item
		width 74px
		margin-top:20px