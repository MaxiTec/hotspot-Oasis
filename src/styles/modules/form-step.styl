.wizard,
.tabcontrol
	display block
	width 100%
	overflow hidden
.wizard a,
.tabcontrol a
	outline 0
.wizard ul,
.tabcontrol ul
	list-style none !important
	padding 0
	margin 0

.wizard ul > li,
.tabcontrol ul > li
	display block
	padding 0

.wizard > .steps .current-info,
.tabcontrol > .steps .current-info
	position absolute
	left -999em

.wizard > .content > .title,
.tabcontrol > .content > .title
	position absolute
	left -999em
.wizard
	& > .steps
		position relative
		display block
		width 100%
		.number
			display none
		& > ul
			display flex
			& > li
				width 50%
	& > .content
		display block
		margin 0.5em
		position relative
		width auto
		min-height: 260px
		& >.body-stretch
			+from-width(5)
				max-width 80%
				margin:0 auto
		& > .body
			// float left
			width 100%
			height auto
			padding 2.5%
			ul
				list-style disc !important
				& > li
					display list-item
			& > iframe
				border 0 none
				width 100%
				height 100%
				&.error
					background rgb(251, 227, 228)
					border 1px solid #fbc2c4
					color #8a1f11
			label
				display inline-block
				margin-bottom 0.5em
				&.error
					color #8a1f11
					display inline-block
					margin-left 1em
					absolute bottom -23px left 0px
					white-space nowrap
					
	& > .actions
		position relative
		display block
		text-align right
		width 100%
		& > ul
			display inline-block
			text-align right
			& > li
				margin 0 0.5em
.wizard > .steps a,
.wizard > .steps a:hover,
.wizard > .steps a:active
	display block
	width auto
	line-height: 45px
	height 45px
	text-decoration none
	text-align: center
	text-transform: uppercase
	margin:1px
.wizard > .steps .disabled a,
.wizard > .steps .disabled a:hover,
.wizard > .steps .disabled a:active
	background #eee
	color #aaa
	cursor default
.wizard > .steps .current a,
.wizard > .steps .current a:hover,
.wizard > .steps .current a:active
	background #d1d1d1
	color #fff
	cursor default
.wizard > .steps .done a,
.wizard > .steps .done a:hover,
.wizard > .steps .done a:active
	background #d1d1d1
	// background rgba(.body,50%)
	color #fff
	
.wizard > .steps .error a,
.wizard > .steps .error a:hover,
.wizard > .steps .error a:active
	background #ff3111
	color #fff
.wizard > .actions
	ul
		display flex
		justify-content: center
.wizard > .actions a,
.wizard > .actions a:hover,
.wizard > .actions a:active
	background-color: #E21B23;
	color #fff
	display block
	text-decoration none
	height: 63px
	line-height: 63px
	text-align: center
	text-transform: uppercase
	width: 245px;
.wizard > .actions .disabled a,
.wizard > .actions .disabled a:hover,
.wizard > .actions .disabled a:active
	background #eee
	color #aaa
	& > .steps
		position relative
		display block
		width 100%
		& > ul
			position relative
			margin 6px 0 0 0
			top 1px
			z-index 1
			& > li
				float left
				margin 5px 2px 0 0
				padding 1px
				&:hover
					background #edecec
					border 1px solid #bbb
					padding 0
				&.current
					background #fff
					border 1px solid #bbb
					border-bottom 0 none
					padding 0 0 1px 0
					margin-top 0
					& > a
						padding 15px 30px 10px 30px
				& > a
					color #5f5f5f
					display inline-block
					border 0 none
					margin 0
					padding 10px 30px
					text-decoration none
					&:hover
						text-decoration none