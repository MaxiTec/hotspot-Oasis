.form-group
	margin-bottom: 15px
	position relative
	.form__label
		display block
		line-height: 25px
		text-align: left
		color:#959595
		font-weight: 300
		font-family: $primary-font
		font-size: 13.5px
		text-transform: capitalize
		&.required
			&:before
				content:'*'
				color:#000
				font-size: 26px
				vertical-align: middle 
	select
		border-radius 0
	.select-custom
		position relative
		&:after
			content:''
			height 20px
			position absolute
			top:50%
			transform: translateY(-50%)
			right 0
			line-height: 40px
			padding-right: 15px
			background: url('../img/icons/select-icon.svg') no-repeat
			user-select none
			pointer-events: none
		label
			&:after
				top 42%
.form-control
	height 45px
	line-height: 45px
	width 100%
	border 1px solid #BBBBBB
	background-color #FFFFFF
	box-shadow: inset 0 0 4px 0 rgba(0,0,0,0.2);
	padding-left: 10px
	padding-right: 10px
	color darken(#BBBBBB,30%)
	font-family $primary-font
	font-size 13px
	&::placeholder
		color:#BBBBBB
textarea.form-control
	padding:10px 
	height 150px
	resize: none
	line-height: 15px
.input-group	
	display table
	width 100%
	border-collapse separate
	&__add
		display: table-cell
		vertical-align: top
		box-sizing border-box
		border-right 0px
		border-left: 0px
		width: 50px
		text-align: center
		span
			line-height 35px
.checkbox-custom
	margin-bottom 15px
	// color:inherit
	input[type="checkbox"]
		display none
		&:checked + label:after
			content:''
			position: absolute
			left: 7px
			top 1px
			width: 5px;
			height: 9px;
			border: solid #000;
			border-width: 0 2px 2px 0;
			transform: rotate(45deg);
	label
		position: relative
		padding-left: 25px
		margin-right: 15px
		text-align left
		color inherit
		font-family $primary-font
		font-size 13.5px
		line-height 20px
		&:before
			content: ""
			display: inline-block
			width: 20px
			height: 20px
			margin-right: 10px
			position: absolute
			left: 0
			top -4px
			color inherit
			background-color: #fff
			border:1px solid #ccc
			// border-radius 3px
.radio-custom
	display: flex
	justify-content: center
	text-align: center
	align-items: center
	padding: 0px 1rem
	input[type="radio"]:checked,input[type="radio"]:not(:checked)
		position: absolute
		left: -9999px
		& + label
			cursor: pointer
			.label__wrap
				padding: 5px
				text-align: center
				border-radius: 100%
				transition: all .25s ease
				margin:0px 2px
				&:hover
					background: rgba(#fff,40%)
				+from-width(5)
					// width: 80px
					margin:0px 5px
				img
					max-width 100%
					display block
					line-height: 0px
			span
				display block
				font-size: 13px
				line-height: 20px
				color:#fff
	input[type="radio"]:checked + label
		.label__wrap
			background: rgba(#fff,40%)